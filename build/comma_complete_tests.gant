import org.jetbrains.intellij.build.BuildMessages
import org.jetbrains.intellij.build.BuildOptions
import org.jetbrains.intellij.build.TestingOptions
import org.jetbrains.intellij.build.TestingTasks
import org.jetbrains.intellij.build.impl.CompilationContextImpl
import org.jetbrains.jps.idea.IdeaProjectLoader
import org.jetbrains.jps.model.JpsProject

import java.util.function.BiFunction

/**
 * Compiles the sources and runs tests from 'community' project. Look at org.jetbrains.intellij.build.TestingOptions to see which options are
 * supported.
 */
target("default": "Run tests") {
  String home = IdeaProjectLoader.guessHome(this)
  String outputDir = "$home/out/tests"
  BuildOptions buildOptions = new BuildOptions()
  buildOptions.incrementalCompilation = true
  def context = CompilationContextImpl.create(home, home,
                                              { p, m -> outputDir } as BiFunction<JpsProject, BuildMessages, String>, buildOptions
  )
  TestingOptions options = new TestingOptions()
  options.testGroups = "COMMA_COMPLETE_TESTS"
  options.platformPrefix = "CommaCore"
  options.mainModule = "edument.perl6.comma.complete"
  TestingTasks.create(context, options).runTests([], "edument.perl6.comma.complete", null)
}
